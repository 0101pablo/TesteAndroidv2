<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtratoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_extrato_infos"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:background="@color/azul_banco"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_extrato_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/helvetica_neue_light"
            android:textColor="@color/branco"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/ib_extrato_sair"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jose da Silva Teste" />

        <ImageButton
            android:id="@+id/ib_extrato_sair"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/logoutButtonDescription"/>

        <TextView
            android:id="@+id/tv_extrato_conta"
            android:layout_width="47dp"
            android:layout_height="13dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/helvetica_neue_med"
            android:text="@string/Conta"
            android:textColor="@color/branco"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_extrato_nome" />

        <TextView
            android:id="@+id/tv_extrato_conta_num"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/helvetica_neue_light"
            android:textColor="@color/branco"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tv_extrato_conta"
            tools:text="2050 / 01.111222-4" />

        <TextView
            android:id="@+id/tv_extrato_saldo"
            android:layout_width="47dp"
            android:layout_height="13dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/helvetica_neue_med"
            android:text="@string/Saldo"
            android:textColor="@color/branco"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_extrato_conta_num" />

        <TextView
            android:id="@+id/tv_extrato_saldo_num"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/helvetica_neue_light"
            android:textColor="@color/branco"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tv_extrato_saldo"
            tools:text="R$1.000,00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_extrato_recentes"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/helvetica_neue_med"
        android:text="@string/Recentes"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_extrato_infos" />

    <view
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_extrato_recentes"/>

</androidx.constraintlayout.widget.ConstraintLayout>